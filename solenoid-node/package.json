{
  "name": "solenoid",
  "version": "2.0.0-alpha.1",
  "description": "Multi-agent AI assistant with local LLM inference",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "solenoid": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch --ignore './logs/**' --ignore './dist/**' src/index.ts",
    "dev:server": "tsx watch --ignore './logs/**' --ignore './dist/**' src/server/index.ts",
    "dev:server:quiet": "SOLENOID_QUIET=1 tsx watch --ignore './logs/**' --ignore './dist/**' src/server/index.ts",
    "dev:ui": "tsx watch --ignore './logs/**' --ignore './dist/**' src/ui/index.tsx",
    "start:ui": "tsx src/ui/index.tsx",
    "start:server": "tsx src/server/index.ts",
    "start:server:quiet": "SOLENOID_QUIET=1 tsx src/server/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "ollama",
    "cli",
    "terminal"
  ],
  "author": "Eli Collinson",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@ag-ui/core": "^0.0.43",
    "@anthropic-ai/sdk": "^0.39.0",
    "@google-cloud/opentelemetry-cloud-monitoring-exporter": "^0.21.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^3.0.0",
    "@google-cloud/storage": "^7.18.0",
    "@google/adk": "^0.2.4",
    "@google/genai": "^0.14.0",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.4.3",
    "@inkjs/ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.210.0",
    "@opentelemetry/resource-detector-gcp": "^0.45.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@pppp606/ink-chart": "^0.2.4",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "hono": "^4.7.6",
    "ink": "^5.2.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "ollama": "^0.5.14",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pyodide": "^0.29.1",
    "react": "^18.3.1",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.19.7",
    "@types/react": "^18.3.18",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
