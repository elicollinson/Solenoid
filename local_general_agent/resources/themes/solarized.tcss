/* Solarized Theme for Textual with Dark/Light Mode Support */

/* Accent colors (same in both modes) */
$yellow: #b58900;
$orange: #cb4b16;
$red: #dc322f;
$magenta: #d33682;
$violet: #6c71c4;
$blue: #268bd2;
$cyan: #2aa198;
$green: #859900;

/* Main screen styling */
Screen:dark {
    background: #002b36;
    color: #839496;
}

Screen:light {
    background: #fdf6e3;
    color: #657b83;
}

/* Input widget */
Input:dark {
    border: round #586e75;
    background: #073642;
    color: #839496;
    margin: 0 1;
    padding: 0 1;
}

Input:light {
    border: round #93a1a1;
    background: #eee8d5;
    color: #657b83;
    margin: 0 1;
    padding: 0 1;
}

Input:dark:focus {
    border: round $blue;
}

Input:light:focus {
    border: round $blue;
}

/* Static text widgets */
Static:dark {
    background: #002b36;
    color: #839496;
}

Static:light {
    background: #fdf6e3;
    color: #657b83;
}

/* Message type colors (same in both modes) */
.success {
    color: $green;
}

.error {
    color: $red;
}

.warning {
    color: $yellow;
}

.info {
    color: $blue;
}

.command {
    color: $magenta;
}

/* Container styling */
Container:dark {
    background: #002b36;
}

Container:light {
    background: #fdf6e3;
}

/* Header and Footer */
Header:dark {
    background: #073642;
    color: #93a1a1;
}

Header:light {
    background: #eee8d5;
    color: #586e75;
}

Footer:dark {
    background: #073642;
    color: #586e75;
}

Footer:light {
    background: #eee8d5;
    color: #93a1a1;
}

/* Message area */
#messages:dark {
    height: 1fr;
    background: #002b36;
    color: #839496;
    padding: 1 2;
}

#messages:light {
    height: 1fr;
    background: #fdf6e3;
    color: #657b83;
    padding: 1 2;
}

/* Welcome message */
#welcome {
    text-align: center;
    color: $cyan;
    padding: 1;
}

/* Menu screens */
.menu-screen:dark {
    background: #002b36;
}

.menu-screen:light {
    background: #fdf6e3;
}

/* Menu title */
.menu-title {
    text-align: center;
    color: $cyan;
    text-style: bold;
    padding: 1;
}

.menu-instructions:dark {
    color: #586e75;
    padding: 0 2;
}

.menu-instructions:light {
    color: #93a1a1;
    padding: 0 2;
}

/* Menu items */
.menu-item:dark {
    color: #839496;
    padding: 0 2;
}

.menu-item:light {
    color: #657b83;
    padding: 0 2;
}

.menu-item:dark:hover {
    background: #073642;
    color: #93a1a1;
}

.menu-item:light:hover {
    background: #eee8d5;
    color: #586e75;
}

/* Button styling */
Button:dark {
    border: round #586e75;
    background: #073642;
    color: #839496;
}

Button:light {
    border: round #93a1a1;
    background: #eee8d5;
    color: #657b83;
}

Button:hover {
    border: round $blue;
    color: $blue;
}

Button:focus {
    border: round $cyan;
}

/* List items */
ListItem:dark {
    background: #002b36;
    color: #839496;
}

ListItem:light {
    background: #fdf6e3;
    color: #657b83;
}

ListItem:dark:hover {
    background: #073642;
    color: #93a1a1;
}

ListItem:light:hover {
    background: #eee8d5;
    color: #586e75;
}

/* OptionList */
OptionList:dark {
    border: round #586e75;
    background: #002b36;
}

OptionList:light {
    border: round #93a1a1;
    background: #fdf6e3;
}

OptionList:dark:focus {
    border: round $blue;
}

OptionList:light:focus {
    border: round $blue;
}

OptionList:dark > .option-list--option {
    color: #839496;
}

OptionList:light > .option-list--option {
    color: #657b83;
}

OptionList:dark > .option-list--option-highlighted {
    background: #073642;
    color: $cyan;
}

OptionList:light > .option-list--option-highlighted {
    background: #eee8d5;
    color: $cyan;
}
